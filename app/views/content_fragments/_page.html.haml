- if !page.hide_header
	%h2= page.title
- if is_admin?
	= link_to 'Edit', content_fragment_edit_url(page), :class => 'btn_edit'
- if page.class.to_s == "Thought"
	.thought_quote= strip_tags(@thought.teaser) rescue ''
	%br
- if page.image?
	%br
	= image_tag page.image.url(:normal), :class => 'content_fragment_header_image'
= page.body.html_safe rescue ""
