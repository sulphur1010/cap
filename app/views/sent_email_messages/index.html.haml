.page
	%h2 Sent Mail
#send_email_messages_container{:style => "width: 563px; overflow-x: scroll"}
	#sent_email_messages{:style => "width: 800px"}
		%table#sent_email_table
			%thead
				%tr
					%td ID
					%td From
					%td To
					%td Subject
					%td Status
					%td Updated
			%tbody
				- @sent_email_messages.each do |sem|
					%tr{:class => "#{cycle('odd', 'even')} #{sem.status}"}
						%td= sem.id
						%td= sem.user.email rescue nil
						%td= "#{sem.to_addresses.count} email addresses"
						%td= sem.subject
						%td= sem.status.titleize
						%td= sem.updated_at.strftime("%F %T")
