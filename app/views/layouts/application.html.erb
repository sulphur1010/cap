<!DOCTYPE html>
<html>
<head>
	<title>Capp-Usa</title>
	<%= stylesheet_link_tag    "application" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>
</head>
<body>

<div id='content'>
	<div id='header'>
		<div id='logo'><img src='/images/capp-logo.png'></div>
		<div id='top_nav_bar'>
			<table class='nav_main'><tr>
					<td width='52px'><a href="/" class='top_nav'><img src='/images/home_btn.png' /></a></td>
					<%= render :partial => 'shared/main_nav_bar' %>
			</tr></table>
		</div>
	</div>
	
	<div id='main'>
		<p class="notice"><%= notice %></p>
		<p class="alert"><%= alert %></p>
		<table><tr>
			<td class='left_content'>
				<%= yield %>
			</td>
			<td class='right_column'>
				<%= render :partial => 'shared/user_menu' %>
				<table class='right_col'>
					<tr><td class='yellow_bg padding_in10'>
					<h5>Be the first to know</h5>
					<form name='newsletter' class=''>
							<input type='text' name='email' class='email_box' value='Add email' >
							<p class='arial size11 cgrey'>submit your email to receive details on our site improvements, as well as hear about upcoming events and courses.</p>
							<input type='submit' class='submit_btn' value='Submit' />
					</form>	
					</td></tr>
				</table>
				<%= Block.display("right_side_image") %>
				<%= render :partial => 'shared/event_block' %>
				<%= render :partial => 'shared/thought_block' %>
			</td>
		</tr></table>
	</div>
	<div id='footer'>
		<table><tr>
		<td width='226px'>
			<%= Block.display("footer_left") %>
		</td>
		<td width='32px'></td>
		<td width='226px'>
			<p class='footer_title'>Contemporary Issues</p>
			<hr class='single_line'>
			<% contemporary_issues = ContemporaryIssue.where(:published => true).order(:title) %>
			<% contemporary_issues.each do |issue| %>
				<%= link_to issue.title, contemporary_issue_path(issue), :class => 'footer_link' %>
			<% end %>
		</td>
		<td width='32px'></td>
		<td width='226px'>
			<p class='footer_title'>Catholic Social Teaching</p>
			<hr class='single_line'>
			<a href='#' class='footer_link'>CST Program</a>
			<a href='#' class='footer_link'>Program Overview</a>
			<a href='#' class='footer_link'>Registration Information</a>
		</td>
		<td width='32px'></td>
		<td width='226px'>
			<%= Block.display("footer_right") %>
		</td>
		</tr>
		<tr><td colspan='7' class='copyright'>
			<br><hr class='single_line'>
			<%= Block.display("footer") %>
		</table>
	</div>
</div>
</body>
</html>
