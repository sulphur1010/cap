.page.friendly
	%h2 Activate your account
	= form_for(resource, :as => "user", :url => password_path(resource_name), :html => { :method => :put }) do |f|
		= devise_error_messages!
		= hidden_field_tag 'user[reset_password_token]', params[:reset_password_token]
		%div
			= f.label :password, "Password"
			%br
			= f.password_field :password
		%div
			= f.label :password_confirmation, "Confirm Password"
			%br
			= f.password_field :password_confirmation
		%div
			= f.submit "Activate my account"

	= link_to "Login", new_session_path(resource_name)
	%br
	= link_to "Sign up", new_registration_path(resource_name)
	%br

