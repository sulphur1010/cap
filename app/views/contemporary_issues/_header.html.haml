.page
	%h2.inline Contemporary Issues
	= select_tag 'person_type', options_for_select({"Choose a Perspective" => ""}) + options_from_collection_for_select(PersonType.where(:published => true).order(:weight), "id", "name", (@person_type.id rescue ''))
	:javascript
		$("#person_type").change(function() {
			id = $(this).val();
			if (id) {
				window.location = "/contemporary_issues?q=" + id;
			}
		});
.black_contemporary_issues_list
	- @contemporary_issues.each do |contemporary_issue|
		.issue= active_link_to contemporary_issue.title, contemporary_issue_path(contemporary_issue, :q => (@person_type.id rescue nil))
	%div{:style => 'clear: both'}
