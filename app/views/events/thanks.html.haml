.event_page
	.page
		%h2 Thank you for registering for this event.

		- if @event.display_advanced_payment_options && @payment_method
			%h1= "Total Price: #{number_to_currency(params[:amount])}"
			%br
			- if ["bank_transfer", "on_site", "check", "form"].include?(@payment_method)
				= render :partial => "method_#{@payment_method}"
			%br
			%br
			%br
			Thank you for registering! If you have any questions or concerns, please contact Program Contact Jim Rice at
			%a{:href => "mailto:jrice@brodywilk.com"}jrice@brodywilk.com
