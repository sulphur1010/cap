= semantic_form_for @event do |f|
  = f.input :type, :collection => Event.types
  = f.input :title
  = f.input :body, :input_html => { :class => 'js_editor' }
  = f.input :chapter, :collection => Chapter.all.collect { |c| [c.name, c.id] }
  = f.input :location, :collection => Location.all.collect { |c| [c.name, c.id] }
  = f.input :speaker, :collection => User.all.collect { |c| [c.email, c.id] }
  = f.input :director, :collection => User.all.collect { |c| [c.email, c.id] }
  = f.input :cost
  = f.input :spots_available
  = f.input :start_date, :as => :string, :input_html => { :class => 'js_start_date' }
  = f.input :end_date, :as => :string, :input_html => { :class => 'js_end_date' }
  = f.input :contemporary_issues, :collection => ContemporaryIssue.where(:published => true).collect { |c| [c.title, c.id] }, :input_html => { :class => 'js_multiselect' }
  = f.input :person_types, :collection => PersonType.where(:published => true).collect { |c| [c.name, c.id] }, :input_html => { :class => 'js_multiselect' }
  = f.buttons
