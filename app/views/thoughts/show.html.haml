= render :partial => 'shared/share'
.page
	= render :partial => 'content_fragments/page', :object => @thought
	- if user_signed_in?
		= render :partial => 'audio_contents/display', :object =>@thought, :locals => { :id => @thought.id	 }
	- else
		= render :partial => 'audio_contents/no_display', :object =>@thought, :locals => { :id => @thought.id}

	- if !@thought.users.empty?
		%h5 AUTHOR(S)
		= render :partial => 'users/list', :object => @thought.users

= render :partial => 'contemporary_issues/list', :object => @thought
	
:javascript
	$(function() {
		$(".top_nav").removeClass("active");
		$("#top_nav_study_center").addClass("active");
	});
