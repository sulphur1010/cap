.page.contact_page
	- unless @contact.user
		= link_to "Upgrade", upgrade_admin_contact_path(@contact), :method => :post, :class => "btn_edit"
	.separator
		%strong Email:
		= @contact.email
	.separator
		%strong Prefix:
		= @contact.prefix
	.separator
		%strong First Name:
		= @contact.first_name
	.separator
		%strong Last Name:
		= @contact.last_name
	.separator
		%strong Address Line 1:
		= @contact.address
	.separator
		%strong Address Line 2:
		= @contact.address_2
	.separator
		%strong City:
		= @contact.city
	.separator
		%strong State:
		= @contact.state
	.separator
		%strong Zip Code:
		= @contact.zip_code
	.separator
		%strong Home Phone:
		= @contact.home_phone
	.separator
		%strong Note:
		= @contact.note
