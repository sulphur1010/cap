.page
	- if is_admin?
		%h2 All Articles
	- else
		%h2 My Articles
	.link
		= link_to 'New Article', new_admin_thought_url
	- table(@thoughts, ['title', 'author', 'published?', '']) do |thought, klass|
		%tr{:class => klass}
			%td= link_to thought.title, thought_path(thought)
			%td= thought.user.full_name rescue nil
			%td= thought.published? ? 'Yes' : 'No'
			%td.controls
				= link_to 'Edit', edit_admin_thought_path(thought)
				= link_to 'Delete', admin_thought_path(thought), :method => :delete, :confirm => "Are you sure?"
	.link
		= link_to 'New Article', new_admin_thought_url, :class => 'btn_edit left'
