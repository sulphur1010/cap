        myPlaylist.shuffle(false);
      });
      $("#playlist-shuffle-true").click(function() {
        myPlaylist.shuffle(true);
      });

      // The select commands

      $("#playlist-select--2").click(function() {
        myPlaylist.select(-2);
      });
