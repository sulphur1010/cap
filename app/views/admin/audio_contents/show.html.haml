        playlistOptions: {
          enableRemoveControls: false
        },
        swfPath: "../../js/Jplayer.swf",
        solution:"flash,html",
        supplied: "oga,mp3",
      });
      $.getJSON( "../audio_mp3s.json", function( data ) {
        $.each( data, function( key, val ) {
          if(val.audio_content_id==#{@audio_content.id}){
            mp3url="../../audio_mp3s/"+val.id +"/"+val.audio_mp3_file_name;
            myPlaylist.add({
              title: val.audio_mp3_file_name,
              mp3: mp3url,
            });
          }
        });
      });

