.page
	.link{:style => "float: right"}
		= link_to 'New Page', new_admin_page_url, :class => 'btn_edit left'
	%h2{:style => "padding-bottom: 10px"} All Pages
	- table(@pages, ['url', 'title', 'published', '']) do |page, klass|
		%tr{:class => klass}
			%td= link_to page.url, page.url
			%td= page.title
			%td= page.published?
			%td.controls
				= link_to 'Edit', edit_admin_page_path(page)
				= link_to 'Delete', admin_page_path(page), :method => :delete, :confirm => "Are you sure?"
	.link
		= link_to 'New Page', new_admin_page_url, :class => 'btn_edit left'
