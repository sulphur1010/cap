.contact_popup_button#js_contact_popup_button
	Questions? Comments?
	%br
	Send us a note!
	%br
	.contact_button_center Contact Us!
.contact_popup#js_contact_popup{:style => 'display: none'}
	.title_bar
		.close_button X
		.title Keep Me Updated
	.popup_body
		.title Sign up for free CAPP-USA updates:
		= semantic_form_for Contact.new do |f|
			= f.input :prefix, :wrapper_html => { :class => 'half_width' }, :as => :select, :collection => Contact::NAME_PREFIXES
			= f.input :first_name, :wrapper_html => { :class => 'half_width float' }
			= f.input :last_name, :wrapper_html => { :class => 'half_width float' }
			= f.input :email
			= f.input :address
			= f.input :address_2, :label => "Address Line 2"
			= f.input :city
			= f.input :state, :wrapper_html => { :class => 'half_width float' }, :as => :select, :collection => Contact::US_STATES
			= f.input :zip_code, :wrapper_html => { :class => 'half_width float' }
			= f.input :home_phone
			= f.input :note
			= f.actions do
				= f.action :submit, :as => :input, :label => "Sign Up"
				= f.action :reset, :as => :input, :label => "Cancel", :button_html => { :class => "close_button" }
