- events = Event.upcoming.where(:featured => true)
- events.each do |event|
	#home_upcoming_course.featured
		%img.inline{:src => "/assets/date.png"}
		%h4.inline Featured Event:
		.event.inline
			.event_title.inline= link_to event.title, event_path(event)
			.event_start.inline= event.formatted_start
