- thought = Thought.random.first
- if thought
	%table.right_col.thought_block
		%tr
			%td.padding_in10
				%h5 Just a Thought
				.thought_quote
					= strip_tags(thought.teaser) rescue ""
					= link_to "Read more", thought_path(thought)
				- if thought.user
					.thought_author_container
						by:
						.thought_author
							= link_to thought.user.full_name, user_path(thought.user)
							.thought_image= link_to image_tag(thought.user.profile_image(:small), :class => 'profile_image', :width => 24, :height => 24, :class => 'user_image'), user_path(thought.user)
				Related to:
				- thought.contemporary_issues.each do |issue|
					= link_to issue.title, contemporary_issue_path(issue), :class => 'contemporary_issue_link_thought'
					="/"
