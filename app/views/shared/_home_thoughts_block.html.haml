- thoughts = Thought.random(3)
#home_thoughts
	%h4
		Articles on Catholic Social Teaching
	.view_all= link_to 'view all', thoughts_path
	- thoughts.each do |thought|
		.thought
			%table
				%tr
					%td
						- if !thought.users.empty?
							- thought.users.each do |user|
								.thought_image= link_to image_tag(user.profile_image(:small), :class => 'profile_image', :width => 24, :height => 24, :class => 'user_image'), user_path(user), :title => user.full_name
					%td				
						- if !thought.users.empty?
							.thought_author_container
								.thought_author
									= thought.users.map { |user| link_to user.full_name, user_path(user) }.join(" and ").html_safe
									= "#{pluralize_without_count(thought.users, "says", "say")}:"
						.thought_teaser
							= strip_tags(thought.teaser) rescue ""
							- if !thought.body.empty?
								= link_to "Read more", thought_path(thought)
